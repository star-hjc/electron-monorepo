{
  "name": "all-chat-pc",
  "version": "1.0.0",
  "description": "electron基础架构",
  "main": "electron/main/main.js",
  "type": "module",
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "start": "echo '启动所有服务'",
    "prepare": "husky",
    "spell-check": "cspell .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
