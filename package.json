  "devDependencies": {
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "cspell": "^8.17.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "~5.7.2"
