{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "paths": {
            "@config/*": ["./config/*"],
            "@logger/*": ["./logger/*"],
            "@windows/*": ["./windows/*"],
            
        }
    }
}