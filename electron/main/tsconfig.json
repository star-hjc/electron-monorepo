{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "paths": {
            "@config/*": ["./config/*"],
            "@logger": ["./modules/logger/index"],
            "@windows": ["./windows/index"],
            "@windows/*": ["./windows/*"]
        }
    }
}