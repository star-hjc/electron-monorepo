{
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "^dev"
            ]
        },
        "@electron/main#dev": {
            "dependsOn": [
                "@package/bridge#dev:init"
            ]
        },
        "@electron/renderer#dev": {
            "dependsOn": [
                "@package/workspace#build"
            ]
        },
        "build": {
            "cache": false,
            "persistent": false,
            "dependsOn": [
                "^build"
            ]
        },
        "@electron/main#build": {
            "cache": false,
            "persistent": false,
            "dependsOn": [
                "@electron/renderer#build"
            ]
        },
        "preview": {
            "cache": false,
            "persistent": true
        },
        "dev:init": {
            "cache": false,
            "persistent": false
        }
    }
}